<div style ="margin-top: 100px;margin-left: 30px;"><h1>编辑博文</h1></div>
<div class="div1" ng-app ="articleEdit" ng-controller ="articleEditController">
  <%= form_for @article do |f| %>
      <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited
              this article from being saved:</h2>
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div>
        <%= f.label :title %><br>
        <%= f.text_field :title , size: "40x12"%>
      </div>
      <div style="margin-top: 20px;"><h2>文章预览</h2></div>
      <div style="margin-top: 5px;">
        <p>{{articleText}}</p>
      </div>

      <div>
        <%= f.label :text %><br>
        <%= f.text_area :text, size: "80x1","ng-model" => "articleText" %>
      </div>
      <div style="margin-top: 20px;">
        <%= f.submit "保存"%>
      </div>
  <% end %>
</div>

<div class="div1">
  <button><%= link_to '返回', articles_path %></button>
</div>

